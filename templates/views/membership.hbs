<body>
{{>navbar}}

    <div class="sidebar">
        <a class="active" href="membership">Buy Membership</a>
        <a href="subscription">Subscriptions</a>
        <a href="history">History</a>
        <a href="logout" >Logout</a>
        <!-- <a href="#contact">Contact</a>
        <a href="#about">About</a> -->
      </div>



      <div class="content-sub">
    <div class="container">
        {{#if isActive }}
        <div class="membership-form">
<h3>You already have an active subscription</h3>

<p>See <u><a href="subscription">Subscription</a></u> for more details</p>
</div>
        {{else}}
        <div class="membership-form">

            <form action="membership" method="post">
                <div class="user-box fadeIn second">
                    <input type="text" name="name" required="" />
                    <label for="">Name</label>
                </div>
                <div class="user-box fadeIn third">
                    <input type="tel" name="phone" required="" />
                    <label for="">Phone Number</label>
                </div>
                {{!-- <div class="user-box fadeIn third">
                    <input type="tel" name="email" required="" value=""/>
                    <label for="">Email</label>
                </div> --}}
                <div class="user-box fadeIn third">
                    <input type="tel" name="address" required="" />
                    <label for="">Address</label>
                </div>
                <div class="row ">

                    <label class="col-lg-3" for="">Select Plan</label>
                    <div class="col-lg-6 d-flex ">
                        <div class="mx-2 ">
                            <input class="radio" type="radio" required name="plan" value="1"
                                onclick="checkRadio(value)" />
                            <label for="">1 month</label>
                        </div>
                        <div class="mx-2">
                            <input class="radio" type="radio" required name="plan" value="6"
                                onclick="checkRadio(value)" />
                            <label for="">6 months</label>
                        </div>
                        <div class="mx-2">
                            <input class="radio" type="radio" required name="plan" value="12"
                                onclick="checkRadio(value)" />
                            <label for="">12 months</label>
                        </div>
                    </div>
                </div>
                <div class="align-items-baseline">
                     <input type="hidden" id="price-checkout-input" name="amount" value=""><p id="price-checkout"></p>
                    <!-- <span id="price"></span> -->
                    <input class="mt-4" type="checkbox" name="" id="" required="">Proceed to checkout
                </div>
                <button class="animated-btn fadeIn fourth" >Submit</button>
            </form>
             {{/if}}
        </div>
    </div>
    </div>


{{>footer}}


    <script type="text/javascript" src="assets/js/index.js"></script>
</body>

</html>