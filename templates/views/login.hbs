<body>
{{>navbar}}



  <!-- login form -->
<div class="container">
  <h3>{{message}}</h3>
</div>
  <div class="login-form">
    <div class="container">
      <div class="login-box fadeInDown">
        <h2 class="fadeIn first">Login</h2>
        <form action="/login" method="post">
          <div class="user-box fadeIn second">
            <input type="text" name="email" required="" />
            <label for="">Email</label>
          </div>
          <div class="user-box fadeIn third">
            <input type="password" name="password" required="" />
            <label for="">Password</label>
          </div>
          <button type="submit" class="animated-btn fadeIn fourth">Submit</button>
        </form>
        <p class="center">Don't have an account?<a href="signup">Sign Up Now</a></p>
      </div>
    </div>
  </div>





  <!-- footer -->
{{>footer}}



  <script type="text/javascript" src="assets/js/index.js"></script>
