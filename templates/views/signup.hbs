<body>


{{>navbar}}
  <div class="signup-form login-form">
    <div class="container">
      <div class="login-box signup-box fadeInDown">
        <h2 class="fadeIn first">Sign Up</h2>
        <form action="/signup" method="post">
          <div class="user-box fadeIn second">
            <input type="text" name="name" required />
            <label for="">Name</label>
          </div>
          <div class="user-box fadeIn third">
            <input type="email" name="email" required />
            <label for="">Email</label>
          </div>
          <div class="user-box fadeIn second">
            <input type="password" name="password" id="pswd1" required />
            <label for="">Password</label>
          </div>
          <div class="user-box fadeIn second">
            <input type="password" name="cpassword" id="pswd2" required />
            <label for="">Confirm Password</label>
          </div>
          <button type="submit" onclick="matchPassword()" class="animated-btn fadeIn fourth">Submit</button>
        </form>
        <p class="center">Already have an account?<a href="login">Login Now</a></p>
      </div>
    </div>
  </div>

{{>footer}}


  <script type="text/javascript" src="assets/js/index.js"></script>
</body>

</html>