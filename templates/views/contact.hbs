    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>

<body>
{{>navbar}}

    <!-- Contact Section Begin -->
    <div class="container">
        <div class="contact-section-container spad">
            <div class="container">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="section-title contact-title">
                                <span>Contact Us</span>
                                <h2>GET IN TOUCH</h2>
                            </div>
                            <div class="contact-widget">
                                <div class="cw-text">
                                    <!-- <i class="fa fa-map-marker"></i> -->
                                    <i class="bi bi-geo-alt-fill"></i>
                                    <p>333 Middle Winchendon Rd, Rindge,<br /> NH 03461</p>
                                </div>
                                <div class="cw-text">
                                    <!-- <i class="fa fa-mobile"></i> -->
                                    <i class="bi bi-phone"></i>
                                    <ul>
                                        <li>125-711-811</li>
                                        <li>125-668-886</li>
                                    </ul>
                                </div>
                                <div class="cw-text email">
                                    <!-- <i class="fa fa-envelope"></i> -->
                                    <i class="bi bi-envelope-fill"></i>
                                    <p>Support.gymcenter@gmail.com</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">

                            <form action="/contact" method="post">
                                <div class="user-box fadeIn second">
                                    <input type="text" name="name" required="" />
                                    <label for="">Name</label>
                                </div>
                                <div class="user-box fadeIn third">
                                    <input type="tel" name="phone" required="" />
                                    <label for="">Phone Number</label>
                                </div>
                                <div class="user-box fadeIn third">
                                    <input type="email" name="email" required="" />
                                    <label for="">Email</label>
                                </div>
                                <div class="user-box fadeIn third">
                                    <textarea placeholder="Comment" name="comment"></textarea>

                                </div>

                                <button class="animated-btn fadeIn fourth">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="map">
                    <iframe width="1080" height="550" id="gmap_canvas"
                        src="https://maps.google.com/maps?q=cornetic%20gym%20bhayandar&t=&z=13&ie=UTF8&iwloc=&output=embed"
                        frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
                </div>
            </div>
        </div>
    </div>
    </div>
    <!-- Contact Section End -->
{{>footer}}

    <script type="text/javascript" src="assets/js/index.js"></script>
</body>

</html>